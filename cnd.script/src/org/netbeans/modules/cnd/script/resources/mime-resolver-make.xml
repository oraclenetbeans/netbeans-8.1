<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE MIME-Resolver PUBLIC "-//NetBeans//DTD MIME Resolver 1.0//EN"
        "http://www.netbeans.org/dtds/mime-resolver-1_0.dtd">
<MIME-resolver>
    <file>
        <ext name="mk"/>
        <resolver mime="text/x-make"/>
    </file>
    <file>
        <ext name=""/>
        <name name="makefile" substring="true"/>
        <resolver mime="text/x-make"/>
    </file>
    <file>
        <!--  configure input file-->
        <ext name="in"/>
        <name name="makefile" substring="true"/>
        <resolver mime="text/x-make"/>
    </file>
    <file>
        <!--  automake input file-->
        <ext name="am"/>
        <name name="makefile" substring="true"/>
        <resolver mime="text/x-make"/>
    </file>
</MIME-resolver>
